{
  "redirects": [
    { "source": "/", "destination": "https://legacy.joseli.to" },
    { "source": "/:path", "destination": "https://legacy.joseli.to" },
    {
      "source": "/:path",
      "has": [
        {
          "type": "header",
          "key": "x-vercel-ip-country",
          "value": "BR"
        }
      ],
      "destination": "/pt/:path",
      "permanent": false
    },
    {
      "source": "/",
      "has": [
        {
          "type": "header",
          "key": "x-vercel-ip-country",
          "value": "BR"
        }
      ],
      "destination": "/pt/",
      "permanent": false
    }
  ]
}